{% extends "_layouts/default.njk" %}

{% block body %}

    <div class="content">
        <strong>Bem vindo, {{ user.name }}</strong>
        <p>Inicie um agendamento escolhendo um profissional abaixo</p>
        <ul>
            {% for provider in providers %}
               <li class="provider">
                    <div>
                        <img src="/file/{{ provider.avatar }}">
                        <strong>{{ provider.name }}</strong>
                    </div>
                    <a href="/app/appointment/new/{{provider.id}}">+</a>
               </li>
            {% endfor %}
        </ul>
        {% if user.provider === true %}}
            <a href="/app/schedule" class="provider-area" >√Årea do Profissional</a>
        {% else %}}
            <a href="/app/schedule/user" class="provider-area" >Meus Agendamentos</a>
        {% endif %}}
        <a href="/app/logout" class="logout" >Sair</a>
    </div>

{% endblock %}